<h1>Edit Task Page</h1>

<%= form_with(model: @task, url: task_path(@task), local: true) do |form| %>
  <% if @task.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@task.errors.count, "error") %> prohibited this task from being saved:</h2>

      <ul>
      <% @task.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title, id: :task_title %>
  </div>

  <div class="field">
    <%= form.label :content %>
    <%= form.text_area :content, id: :task_content %>
  </div>
  
    <div class="actions">
      <%= form.submit "Update Task", id: "update-task" %>
    </div>
  <% end %>

<%= link_to 'Back', tasks_path, id: "back" %>
